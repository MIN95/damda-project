 <select id="selectList" parameterType="reviewVo" resultType="reviewVo">
	select * from review join userinfo on review.r_usernum = userinfo.usernum left join photo on photo.p_reviewnum = review.reviewnum  where review.r_itemnum = #{r_itemNum} order by ${itemalign} limit #{startpoint}, #{row} 
</select> 

<select id="reviewCount" parameterType="reviewVo" resultType="int">
	select count(*) from review where r_itemnum=#{r_itemNum};
</select>

